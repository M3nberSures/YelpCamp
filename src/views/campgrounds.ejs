<% include partials/header %>
<div class="container">
  <header class="jumbotron">
    <div class="container">
      <h1>Welcome to YelpCamp!</h1>
      <p>View our hand-picked campgrounds from all over the world</p>
      <% if(typeof user != 'undefined'){ %>
          <p><a class="btn btn-primary btn-sm" href="/campgrounds/new">add a new campground</a></p>
        <% } %>
    </div>
  </header>

<h3 class="text-center">Our Most Popular Campgrouds</h3>
    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
      <% campgrounds.forEach((campground) => { %>
        <div class="col-md-3 col-sm-6">
          <div class="thumbnail">
              <a href="/campgrounds/<%= campground._id %>"><img src="<%= campground.image %>" class="img-responsive"></a>
          <div class="caption">
              <a href="/campgrounds/<%= campground._id %>"><h4><%= campground.name %></h4></a>
            <p>
              <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
            </p>
          </div>
          </div>
        </div>
      <% }); %>
    </div>
</div>
<% include partials/footer %>
