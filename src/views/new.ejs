<% include partials/header %>

<div class="container">
  <div class="row">
      <h1 style="text-align:center;">Create a New Campground</h1>
      <div style="max-width: 300px; margin: 25px auto;">
        <form action="/campgrounds" method="post" enctype="multipart/form-data">
          <div class="form-group">
            <input class="form-control" type="text" name="name" placeholder="name" required>
          </div>
            <div class="form-group">
              <input class="form-control" type="file" name="image" placeholder="image" accept="image/*" required>
            </div>
            <div class="form-group">
                <input class="form-control" type="number" placeholder="0.00" required name="price" min="0" step="0.01" title="Currency" pattern="^\d+(?:\.\d{1,2})?$" required>
              </div>
            <div class="form-group">
              <textarea class="form-control" style="resize:none" name="description" rows="8" placeholder="description" required></textarea>
            </div>
            <div class="form-group">
              <button class="btn btn-md btn-primary btn-block" type="submit">Submit</button>
            </div>
        </form>
        <a href="/campgrounds">Click here to go back</a>
      </div>
  </div>
</div>

<% include partials/footer %>
